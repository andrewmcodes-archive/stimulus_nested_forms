.text-center.row
  .col-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3
    .card.shadow-lg.rounded
      %h5.card-header.bg-primary.text-light
        = @project.name
      .card-body
        .card-text
          = @project.description
      .card-footer
        = link_to projects_path, class: 'btn btn-outline-success mr-4' do
          %span.glyphicon.glyphicon-list-alt
          All Projects
        = link_to edit_project_path(@project), class: 'btn btn-primary' do
          %span.glyphicon.glyphicon-pencil
          Edit
